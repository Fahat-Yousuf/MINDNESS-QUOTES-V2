<p class="p1"><span class="Apple-converted-space">    </span>&lt;script&gt;</p>
<p class="p1"><span class="Apple-converted-space">        </span>async function getQuotesAndImages() {</p>
<p class="p1"><span class="Apple-converted-space">            </span>const category = document.getElementById("quoteCategory").value;</p>
<p class="p1"><span class="Apple-converted-space">            </span>const numImages = parseInt(document.getElementById("numImages").value);</p>
<p class="p1"><span class="Apple-converted-space">            </span>const apiUrl = `https://api.quotable.io/quotes?tags=${category}&amp;limit=${numImages}`;</p>
<p class="p1"><span class="Apple-converted-space">            </span>try {</p>
<p class="p1"><span class="Apple-converted-space">                </span>const response = await fetch(apiUrl);</p>
<p class="p1"><span class="Apple-converted-space">                </span>if (response.ok) {</p>
<p class="p1"><span class="Apple-converted-space">                    </span>const data = await response.json();</p>
<p class="p1"><span class="Apple-converted-space">                    </span>const quoteContainer = document.getElementById("quote");</p>
<p class="p1"><span class="Apple-converted-space">                    </span>quoteContainer.innerHTML = '';</p>
<p class="p1"><span class="Apple-converted-space">                    </span>const imageGallery = document.getElementById("imageGallery");</p>
<p class="p1"><span class="Apple-converted-space">                    </span>imageGallery.innerHTML = '';</p>
<p class="p1"><span class="Apple-converted-space">                    </span>data.results.forEach((quote, index) =&gt; {</p>
<p class="p1"><span class="Apple-converted-space">                        </span>const quoteText = quote.content;</p>
<p class="p1"><span class="Apple-converted-space">                        </span>// Fetch or generate actual images here.</p>
<p class="p1"><span class="Apple-converted-space">                        </span>// You'll need to use image services or APIs for this.</p>
<p class="p1"><span class="Apple-converted-space">                        </span>// For demonstration, we use placeholder images.</p>
<p class="p1"><span class="Apple-converted-space">                        </span>const quoteImage = `https://via.placeholder.com/400x200.png?text=${encodeURIComponent(quoteText)}`;</p>
<p class="p1"><span class="Apple-converted-space">                        </span>quoteContainer.innerHTML += `&lt;p&gt;${quoteText}&lt;/p&gt;`;</p>
<p class="p1"><span class="Apple-converted-space">                        </span>imageGallery.innerHTML += `&lt;div class="imageContainer"&gt;&lt;img src="${quoteImage}" alt="Quote Image ${index + 1}" /&gt;&lt;/div&gt;`;</p>
<p class="p1"><span class="Apple-converted-space">                    </span>});</p>
<p class="p1"><span class="Apple-converted-space">                </span>} else {</p>
<p class="p1"><span class="Apple-converted-space">                    </span>console.error("Error fetching quotes:", response.status, response.statusText);</p>
<p class="p1"><span class="Apple-converted-space">                </span>}</p>
<p class="p1"><span class="Apple-converted-space">            </span>} catch (error) {</p>
<p class="p1"><span class="Apple-converted-space">                </span>console.error("Error fetching quotes:", error);</p>
<p class="p1"><span class="Apple-converted-space">            </span>}</p>
<p class="p1"><span class="Apple-converted-space">        </span>}</p>
<p class="p1"><span class="Apple-converted-space">    </span>&lt;/script&gt;</p>
